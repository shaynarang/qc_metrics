!!!
%html
  %head
    %title QcMetrics
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
      - if notice
        .messages
          .col-md-12.col-sm-12.col-xs.12
            %p.notice
              = notice

      - if alert
        .messages
          .col-md-12.col-sm-12.col-xs.12
            %p.alert
              = alert

    = yield